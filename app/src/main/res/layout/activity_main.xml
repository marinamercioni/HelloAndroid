<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.udacity.MainActivity">

    <ImageView
        android:id="@+id/android"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:scaleType="fitStart"
        android:src="@drawable/android"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/udacity"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:src="@drawable/udacity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/android"
        android:fontFamily="sans-serif"
        android:text="Udacity"
        android:textSize="45dp"
        android:id="@+id/textView"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:fontFamily="sans-serif"
        android:text="650-555-5555"
        android:textSize="20dp"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text"
        android:fontFamily="sans-serif"
        android:text="www.udacity.com"
        android:textSize="15dp"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:fontFamily="sans-serif"
        android:text="2465 Latham St Mountain View, CA 94043"
        android:textSize="15dp"
        android:padding="20dp"/>
</RelativeLayout>
